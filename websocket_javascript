        var socket;  
        function Connect(){  
            try{  
                socket=new WebSocket('');  
            }catch(e){  
                alert('error');  
                return;
            }  
            socket.onopen = sOpen;  
            socket.onerror = sError;	
            socket.onmessage= sMessage;
            socket.onclose= sClose;
        }  
